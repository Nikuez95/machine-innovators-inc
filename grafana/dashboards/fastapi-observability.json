{
  "id": null,
  "uid": "fastapi-observability",
  "title": "FastAPI Observability",
  "tags": ["fastapi", "prometheus", "mlops"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "handler",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": "label_values(http_requests_total, handler)",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Requests / second (RPS)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(http_requests_total{handler=~\"$handler\"}[1m]))", "legendFormat": "rps" }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Error rate (5xx)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(http_requests_total{status=~\"5..\",handler=~\"$handler\"}[5m])) / sum(rate(http_requests_total{handler=~\"$handler\"}[5m]))", "legendFormat": "5xx ratio" }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Latency p95",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        { "refId": "A", "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{handler=~\"$handler\"}[5m])) by (le))", "legendFormat": "p95" }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Latency p50",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        { "refId": "A", "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{handler=~\"$handler\"}[5m])) by (le))", "legendFormat": "p50" }
      ]
    }
  ]
}
